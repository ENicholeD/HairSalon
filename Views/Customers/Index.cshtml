@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Customer>;
@if (@Model.Count == 0)
{
    <h4>There are no Customers at this time</h4>
} else
{
    <h1>All customers</h1>
    <ul>
    @foreach (Customer customer in Model)
    {
        <h3><li>@Html.ActionLink($"{customer.Name}", "Show", "Customer",new {id = customer.CustomerId})</li></h3>
    }
    </ul>
}
<a href="/Customer/Create">Add Customer</a>

<a href="/">Back to homepage</a>