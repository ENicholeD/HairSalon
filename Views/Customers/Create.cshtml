@model HairSalon.Models.Customer

<h3>Add customer:</h3>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
  <br>
  @Html.LabelFor(model => model.Gender)
  @Html.TextBoxFor(model => model.Gender, new { @class = "form-control" })
  <br>
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  <input type="submit" value="Add Customer" class="btn btn-default" />
}
<br>
@Html.ActionLink("Back to Customers", "Index")