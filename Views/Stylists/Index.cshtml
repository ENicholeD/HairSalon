@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;
@if (@Model.Count == 0)
{
    <h4>There are no stylists at this time</h4>
} else
{
    <h1>All stylists</h1>
    <ul>
    @foreach (Stylist stylist in Model)
    {
        <h3><li>@Html.ActionLink($"{stylist.FirstName}", "Show", new {id = stylist.StylistId})</li></h3>
    }
    </ul>
}
<a href="/Customers/Create">Add Customer</a>
<a href="/Stylists/Create">Add Stylist</a>
<a href="/">Back to homepage</a>